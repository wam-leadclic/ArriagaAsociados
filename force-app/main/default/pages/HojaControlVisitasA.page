<apex:page standardController="Account">
    <apex:form >
    <apex:pageBlock title="Verificar Datos para la Hoja de Visita" ><apex:pageMessages />
        <apex:pageBlockSection columns="1"  >                  
            <apex:inputField value="{!Account.FirstName }"/>
            <apex:inputField value="{!Account.LastName }"/>             
          
            <apex:inputField value="{!Account.TipoDocumento__c }"/>            
            <apex:inputField value="{!Account.DocumentoIdentidad__c }"/>
            <apex:inputField value="{!Account.PersonBirthdate }"/>
            <apex:inputField value="{!Account.Phone }"/>
            <apex:inputField value="{!Account.PersonMobilePhone }"/>   
            <apex:inputField value="{!Account.PersonEmail }"/>
            <apex:inputField value="{!Account.BillingStreet }"/>            
            <apex:inputField value="{!Account.ShippingCity }"/>  
            <apex:inputField value="{!Account.BillingState }"/>  
            <apex:inputField value="{!Account.BillingPostalCode }"/>       
        </apex:pageBlockSection> 
        <apex:pageBlockSection columns="1"  >     
            <apex:inputField value="{!Account.AceptoPoliticaPrivacidad__pc }"/>  
            <apex:inputField value="{!Account.DeseoRecibirComunicacionesComerciales__pc }"/>  
            <apex:inputField value="{!Account.Deseo_recibir_Mensajes_de_Whatsapp__pc }"/>   
        </apex:pageBlockSection> 
        <p> A fecha de{! TODAY() } acepto los datos presentados </p>
        <apex:pageBlockButtons >
            <apex:commandButton action="{! save }" value="Save" />
        </apex:pageBlockButtons>
    </apex:pageBlock>
    </apex:form>
</apex:page>