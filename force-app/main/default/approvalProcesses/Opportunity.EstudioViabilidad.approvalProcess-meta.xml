<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Admin</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Type</field>
        <field>NumeroExpediente__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CorreoAvisoAprobacion</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>ResponsableViabilidad__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Primer paso de aprobación asignado al responsable de viabilidad de la oportunidad</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.ResponsableViabilidad__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>ResponsableViabilidad</label>
        <name>ResponsableViabilidad</name>
        <rejectionActions>
            <action>
                <name>CorreoAvisoRechazo</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CorreoAvisoAprobacion</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>ejimenezg@arriagaasociados.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jdiaz@arriagaasociados.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lcalleja@arriagaasociados.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Responsables de viabilidad del producto (usuarios concretos)</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.ResponsableViabilidad__c</field>
                <operation>equals</operation>
            </criteriaItems>
        </entryCriteria>
        <label>Responsables de producto</label>
        <name>ResponsablesProducto</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>CorreoAvisoRechazo</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Es habitual que los asesores soliciten el estudio de viabilidad de una propuesta a otras personas o equipos, desde el responsable de su oficina a Servicios Jurídicos (SSJJ) o Nuevos Productos (NNPP).</description>
    <emailTemplate>Flujos/AvisoAprobacion</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Aprobado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CorreoAvisoAprobacion</name>
            <type>Alert</type>
        </action>
        <action>
            <name>DesbloquearRegistro</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CorreoAvisoRechazo</name>
            <type>Alert</type>
        </action>
        <action>
            <name>DesbloquearRegistroII</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>BloquearRegistro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EnvioAprobacion</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Estudio de Viabilidad</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>DesbloquearRegistroIII</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
